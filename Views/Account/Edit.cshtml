@model QuanLySanXuat.Entities.Account

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idaccount" />
            <div class="form-group">
                <label asp-for="Tk" class="control-label"></label>
                <input asp-for="Tk" class="form-control" />
                <span asp-validation-for="Tk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mk" class="control-label"></label>
                <input asp-for="Mk" class="form-control" />
                <span asp-validation-for="Mk" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label class="control-label">Active or Inactive</label>
                <select asp-for="Active" class="form-control" id="exampleSelect2" required>
                    <option value="1">Active</option>
                    <option value="0">InActive</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Vaitroidvt" class="control-label"></label>
                <select asp-for="Vaitroidvt" class="form-control" asp-items="ViewBag.Vaitroidvt"></select>
                <span asp-validation-for="Vaitroidvt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
