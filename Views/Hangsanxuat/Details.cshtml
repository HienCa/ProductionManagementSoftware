

@model QuanLySanXuat.Entities.Hangsx

@{
    Layout = "_Layout";

}
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <h3 class="tile-title">Vật liệu #@Model.Mahsx</h3>
            <div class="tile-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Idhsx" />
                <div class="row">
                    <div class="form-group col-md-6 col-sm-12">

                        <label class="control-label">Hãng sản xuất</label>
                        <div>
                            @Model.Mahsx
                        </div>
                    </div>
                    <div class="form-group col-md-6 col-sm-12">

                        <label class="control-label">Hãng sản xuất</label>
                        <div>
                          @Model.Tenhsx
                        </div>
                    </div>
                    <div class="mt-3 text-center">
                        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Idhsx"><i class="fas fa-edit text-white"></i></a>
                    </div>

                </div>



            </div>

        </div>
    </div>
</div>
