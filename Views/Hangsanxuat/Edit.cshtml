@model QuanLySanXuat.Entities.Hangsx

@{
    Layout = null;

}



<form asp-action="Edit" asp-route-id="@Model.Idhsx" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Idhsx" />
    <div class="row">

        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Mahsx" class="control-label">Mã hãng sản xuất</label>
            <input asp-for="Mahsx" class="form-control" />
            <span asp-validation-for="Mahsx" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Tenhsx" class="control-label">Tên hãng sản xuất</label>
            <input asp-for="Tenhsx" class="form-control" />
            <span asp-validation-for="Tenhsx" class="text-danger"></span>
        </div>



    </div>
    <div class="text-center mt-3 col-12">
       

        <button class="btn btn-success w-100 " type="submit">Lưu</button>

    </div>

</form>




