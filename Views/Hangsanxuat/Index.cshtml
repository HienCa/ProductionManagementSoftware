@model IEnumerable<QuanLySanXuat.Entities.Hangsx>


@{
    Layout = "_Layout";


}
<div class="d-flex">
    <h2>Quản Lý Hãng Sản Xuất</h2>
    <div class="col-md-3 col-sm-12">
        @*<a href="/Hangsanxuat/Create" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size:17px">
                <i class="fas fa-plus"></i>Thêm mới
            </a>*@
        <a onclick="showInPopup('@Url.Action("Create", "Hangsanxuat", null, Context.Request.Scheme)', 'Thêm Hãng Sản Xuất')" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px "><i class="fas fa-plus"></i>Thêm mới</a>
        <a href="/Hangsanxuat/ExportToExcel" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-excel"></i>
        </a>
        <a href="/Hangsanxuat/ExportToPDF" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-pdf"></i>
        </a>
        <a href="/Hangsanxuat/ExportToCSV" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-csv"></i>
        </a>
    </div>


    <div class="col-md-3 col-sm-12">
        <form asp-action="Import" asp-controller="Hangsanxuat" method="post" enctype="multipart/form-data">
            <div class=" d-flex">
                @*<label for="fileExcel"  class="btn  ">Chọn file Excel</label>*@
                <input id="fileExcel" class="" required type="file" name="file" />
                <button class="btn" style="background-color: #EDEDED; color: #73879C; font-size: 17px " type="submit"><i class="fas fa-upload"></i></button>
            </div>

        </form>

    </div>
</div>

<div class="x_content">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Mã hãng sản xuất</th>
                            <th>Tên hãng sản xuất</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Mahsx</td>
                                <td>@item.Tenhsx</td>

                                <td class="table-td-center">

                                    @*<a asp-action="Details" class="btn btn-info" asp-route-id="@item.Idhsx"><i class="fas fa-info text-white"></i></a>*@
                                    @*<a onclick="showInPopup('@Url.Action("Details", "Hangsanxuat", new {id=item.Idhsx }, Context.Request.Scheme)', 'Thông tin chi tiết')" class="btn btn-info btn-sm"><i class="fas fa-info text-white"></i></a>*@

                                    <a onclick="showInPopup('@Url.Action("Edit", "Hangsanxuat", new {id=item.Idhsx }, Context.Request.Scheme)', 'Cập Nhật Thông Tin')" class="btn btn-warning btn-sm"><i class="fas fa-edit text-white"></i></a>
                                    <a onclick="showInPopup('@Url.Action("Delete", "Hangsanxuat",  new {id=item.Idhsx } , Context.Request.Scheme)', 'Bạn Chắc Chắn Muốn Xóa?')" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt text-white"></i></a>

                                    @*<a asp-action="Edit" class="btn btn-sm  btn-warning " asp-route-id="@item.Idhsx"><i class="fas fa-edit text-white"></i></a>*@
                                    @* <a asp-action="Delete" class="btn btn-sm  btn-danger " asp-route-id="@item.Idhsx"><i class="fas fa-trash-alt text-white"></i></a>*@

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" id="close" data-bs-dismiss="modal" aria-label="Close">
                    
                </button>
            </div>
            <div class="modal-body">
               
            </div>
            
        </div>
    </div>
</div>

