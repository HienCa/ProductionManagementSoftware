@model QuanLySanXuat.Entities.Account;
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Quản lý sản xuất HienCa | </title>



    <!-- Font Awesome -->
    <link href="~/Fonts/fontawesome-free-6.2.1-web/css/all.min.css" rel="stylesheet" />
    <!-- Custom Theme Style -->
    <link href="~/bootstrap-5.2.3-dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/multiSelectDropdown/virtual-select.min.css">



</head>

<body>

    <div style="background-image: url('~/wwwroot/Images/team.jpg') ">

        <div class="w-50 m-auto">

            <b>HỆ THỐNG HIENCA</b>


         
            <form asp-action="Login" asp-controller="Access">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Email" class="control-label">Tên nhóm vật liệu</label>
                <div class="form-group mb-3">
                    <input type="text" class="form-control w-50" placeholder="Email" asp-for="Email">

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="PassWord" class="control-label">Tên nhóm vật liệu</label>
                    <input type="password" class="form-control w-50" placeholder="Mật khẩu" asp-for="PassWord">
                    <span asp-validation-for="PassWord" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" class="form-control w-50" asp-for="KeepLoggedIn">
                    <label asp-for="KeepLoggedIn" class="control-label">Duy trì đăng nhập</label>

                </div>
              
                <div class="text-center">
                    <input type="submit" value="Đăng nhập" class="btn btn-success w-50" />
                </div>
                @if (ViewData["ValidateMessage"] != null)
                {
                    <br />
                    <br />
                    <label class="text-danger">@ViewData["ValidateMessage"]</label>
                }
               
            <div class="text-right p-t-12">


                @Html.ActionLink("Bạn chưa có tài khoản?", "CreateCustomerAccount", "Khachhang", null, new { @class = "txt2 mr-3" })
                @Html.ActionLink("Bạn quên mật khẩu?", "QuenMatKhau", "Home", null, new { @class = "txt2" })
                @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "txt2 text-center" })
            </div>
            </form>
        </div>

    </div>
   
   
    <!--=====FOOTER======-->
    <div class="text-center p-t-70 txt2">
        Phần mềm quản lý sản xuất <i class="far fa-copyright" aria-hidden="true"></i>
        <script type="text/javascript">document.write(new Date().getFullYear());</script>
        <a class="txt2" href="https://www.facebook.com/nguyenvanhien0506"> By HienCa </a>
    </div>

    <script type="text/javascript" src="~/multiSelectDropdown/virtual-select.min.js"></script>
    <script type="text/javascript">
        VirtualSelect.init({
            ele: 'select'
        });
    </script>
</body>

</html>