

@model QuanLySanXuat.Entities.Nhacungcapvl
@{
    Layout = null;

}


<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Idncc" />
<div class="row">
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Nhà cung cấp</label>
        <div>
            @Model.Mancc - @Model.Tenncc
        </div>
    </div>

    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Địa chỉ</label>
        <div>
            @Model.Diachi
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Email</label>
        <div>
            @Model.Email
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Số điện thoại</label>
        <div>
            @Model.Sdt
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Mã số thuế</label>
        <div>
            @Model.Masothue
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label for="exampleSelect1" class="control-label">Ghi chú</label>

        <div>
            @Model.Ghichu
        </div>
    </div>

</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Idncc" />



    <input type="submit" value="Delete" class="btn btn-danger w-100" />
</form>

