@using QuanLySanXuat.Entities;
@model QuanLySanXuat.Entities.Nhacungcapvl


@{
    Layout = null;

}



<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Idncc" />
    <div class="row">

        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Mancc" class="control-label">Mã nhà cung cấp</label>
            <input asp-for="Mancc" class="form-control" />
            <span asp-validation-for="Mancc" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Tenncc" class="control-label">Tên nhà cung cấp</label>
            <input asp-for="Tenncc" class="form-control" />
            <span asp-validation-for="Tenncc" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Sdt" class="control-label">Số điện thoại</label>
            <input asp-for="Sdt" type="text" class="form-control" />
            <span asp-validation-for="Sdt" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Diachi" class="control-label">Địa chỉ</label>
            <input asp-for="Diachi" class="form-control" />
            <span asp-validation-for="Diachi" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Masothue" class="control-label">Mã số thuế</label>
            <input asp-for="Masothue" type="text" class="form-control" />
            <span asp-validation-for="Masothue" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Email" class="control-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Facebook" class="control-label">Facebook</label>
            <input asp-for="Facebook" class="form-control" />
            <span asp-validation-for="Facebook" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Zalo" class="control-label">Zalo</label>
            <input asp-for="Zalo" class="form-control" />
            <span asp-validation-for="Zalo" class="text-danger"></span>
        </div>

        <div class="form-group col-md-12 col-sm-12">

            <label asp-for="Ghichu" class="control-label">Ghi chú</label>
            <input asp-for="Ghichu" type="number" class="form-control" />
            <span asp-validation-for="Ghichu" class="text-danger"></span>
        </div>

    </div>
    <div class="text-center mt-3 col-12">

        <button class="btn btn-success  w-100" type="submit">Lưu</button>

    </div>

</form>

