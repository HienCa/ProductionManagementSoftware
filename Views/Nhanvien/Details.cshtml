@model QuanLySanXuat.Entities.Nhanvien

@{
    Layout = null;

}


<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Idnv" />
    <div class="row">
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Manv" class="control-label">Mã nhân viên</label>
            <div>
                @Model.Manv 
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Tennv" class="control-label">Tên nhân viên</label>
            <div>
              @Model.Tennv
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Cccd"  class="control-label">CCCD</label>

            <div>
                @Model.Cccd
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Diachi"  class="control-label">Địa chỉ</label>

            <div>
                @Model.Diachi
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Email" class="control-label">Email</label>

            <div>
                @Model.Email
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Sdt" class="control-label">Số điện thoại</label>
            <div>
                @Model.Sdt
            </div>


        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Ngaysinh" class="control-label">Ngày sinh</label>
            <div>
                @Model.Ngaysinh
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Masothue" class="control-label">Mã số thuế</label>
            <div>
                @Model.Masothue
            </div>
        </div>


        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Gioitinh" class="control-label">Giới tính</label>
            <div>
                @Model.Gioitinh
            </div>
        </div>
        <div class="form-group col-md-6 col-sm-12">

            <label asp-for="Ghichu" class="control-label">Ghi chú</label>
            <div>
                @Model.Ghichu
            </div>
        </div>

        <div class="form-group col-md-6 col-sm-12">
            <label asp-for="Hinhanh" class="control-label">Hình ảnh</label>

            <img src="~/Images/@Model.Hinhanh"
                 class=""
                 height="200" width="200"
                 style="border-radius:10px"
                 asp-append-version="true" alt="No Image" />

            @*<img src="@FileLocation.RetriveFileFromFolder@Model.Hinhanh" class="img-thumbnail" height="100" width="100" asp-append-version="true" />*@

        </div>

        <div class="mt-3 text-center">
            <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Idnv"><i class="fas fa-edit text-white"></i></a>
        </div>
    </div>


</form>

