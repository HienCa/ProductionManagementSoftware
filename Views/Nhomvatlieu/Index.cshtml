@model IEnumerable<QuanLySanXuat.Entities.Nhomvl>

@{

    Layout = "_Layout";


}
<div class="d-flex">
    <h2>Quản Lý Nhóm Vật Liệu</h2>
    <div class="col-md-3 col-sm-12">
        @*<a href="/Nhomvatlieu/Create" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size:17px">
                <i class="fas fa-plus"></i>Thêm mới
            </a>*@
        <a onclick="showInPopup('@Url.Action("Create", "Nhomvatlieu", null, Context.Request.Scheme)', 'Thêm Nhóm Vật Liệu')" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px "><i class="fas fa-plus"></i>Thêm mới</a>

        <a href="/Nhomvatlieu/ExportToExcel" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-excel"></i>
        </a>
        <a href="/Nhomvatlieu/ExportToPDF" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-pdf"></i>
        </a>
        <a href="/Nhomvatlieu/ExportToCSV" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-csv"></i>
        </a>
    </div>


    <div class="col-md-3 col-sm-12">
        <form asp-action="Import" asp-controller="Nhomvatlieu" method="post" enctype="multipart/form-data">
            <div class=" d-flex">
                @*<label for="fileExcel"  class="btn  ">Chọn file Excel</label>*@
                <input id="fileExcel" class="" required type="file" name="file" />
                <button class="btn" style="background-color: #EDEDED; color: #73879C; font-size: 17px " type="submit"><i class="fas fa-upload"></i></button>
            </div>

        </form>

    </div>
</div>



<div class="x_content">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Mã nhóm vật liệu</th>
                            <th>Tên nhóm vật liệu</th>
                            <th>Loại nhóm vật liệu</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Manvl</td>
                                <td>@item.Tennvl</td>
                                <td>@item.Loainvl</td>

                                <td class="table-td-center">
                                    @*<a asp-action="Details" class="btn btn-sm  btn-info" asp-route-id="@item.Idnvl"><i class="fas fa-info text-white"></i></a>
                                        <a asp-action="Edit" class="btn btn-sm  btn-warning " asp-route-id="@item.Idnvl"><i class="fas fa-edit text-white"></i></a>
                                        <a asp-action="Delete" class="btn btn-sm  btn-danger " asp-route-id="@item.Idnvl"><i class="fas fa-trash-alt text-white"></i></a>*@
                                    <a onclick="showInPopup('@Url.Action("Edit", "Nhomvatlieu", new {id=item.Idnvl }, Context.Request.Scheme)', 'Cập Nhật Thông Tin')" class="btn btn-warning btn-sm"><i class="fas fa-edit text-white"></i></a>
                                    <a onclick="showInPopup('@Url.Action("Delete", "Nhomvatlieu",  new {id=item.Idnvl } , Context.Request.Scheme)', 'Bạn Chắc Chắn Muốn Xóa?')" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt text-white"></i></a>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
