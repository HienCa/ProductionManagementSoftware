@model QuanLySanXuat.Entities.Noidungpbh;
@using QuanLySanXuat.Entities;

@{
    Layout = "_Layout";
    ProductionManagementSoftwareContext _context = new ProductionManagementSoftwareContext();
    Nhanvien nv = _context.Nhanvien.Where(n => n.Email.Equals(TempData["OWN"])).FirstOrDefault();

    int id = ViewBag.Idpbh;
    Phieubanhang phieubanhang = _context.Phieubanhang.Where(p => p.Idpbh == id).FirstOrDefault();

    List<Vatlieu> vatlieu = _context.Vatlieu.Where(active => active.Active == 1).ToList();
    List<Khachhang> nhacungcap = _context.Khachhang.Where(n => n.Active == 1).ToList();

}



<ul class="tabs row text-center">
    <li class="tab-link  col-md-4 current" data-tab="tab-1">Nội dung phiếu nhập #@phieubanhang.Sophieu</li>
    <li class="tab-link  col-md-4 " data-tab="tab-2">Nhập vật liệu #@phieubanhang.Sophieu</li>
    <li class="tab-link  col-md-4" data-tab="tab-3">Thông tin phiếu nhập #@phieubanhang.Sophieu</li>

</ul>
<div id="tab-1" class="tab-content current">
    <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
           cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Vật liệu</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
                <th></th>


            </tr>
        </thead>
        <tbody>
            <tr class="d-none">
                <td>.</td>
                <td>.</td>
                <td>.</td>
                <td>.</td>
                
            </tr>
            @foreach (var item in TempData["Noidungphieubanhang"] as List<Noidungpbh>)
            {
        <tr>
            <td>@item.IdvlNavigation.Tenvl</td>
            <td>@item.Soluong</td>
            @{
                var Dongia = String.Format("{0:0,0}", @item.Dongia);

            }
            <td>@Dongia</td>

            <td>
                <a asp-action="Edit" class="btn  btn-sm  btn-warning " asp-controller="Noidungphieubanhang" asp-route-id="@item.Idndpbh"><i class="fas fa-edit text-white"></i></a>
                <a asp-action="Delete" class="btn  btn-sm  btn-danger " asp-controller="Noidungphieubanhang" asp-route-id="@item.Idndpbh"><i class="fas fa-trash-alt text-white"></i></a>

            </td>
        </tr>
            }


        </tbody>
    </table>
</div>
<div id="tab-2" class="tab-content ">
    <form asp-action="Create" asp-controller="Noidungphieubanhang">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" value="@phieubanhang.Idpbh" asp-for="Idpbh" />
        @*<input type="hidden" value="@nv.Idnv" name="Idnv" />*@

        <div class="row">

            <div class="form-group col-md-6 col-sm-12">
                <label class="control-label">Chọn vật liệu muốn nhập kho</label>
                <br />
                <select id="multipleSelect" asp-for="Idvl" placeholder="Chọn vật liệu muốn nhập kho" data-search="true"
                        data-silent-initial-value-set="true">
                    @foreach (var item in vatlieu)
                    {
                        <option value="@item.Idvl">@item.Tenvl</option>
                    }

                </select>
            </div>
            

            <div class="form-group col-md-6 col-sm-12">
                <label class="control-label">Số lượng</label>
                <input asp-for="Soluong" type="number" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6 col-sm-12">
                <label class="control-label">Đơn giá</label>
                <input asp-for="Dongia" type="number" class="form-control" />
                <span asp-validation-for="Dongia" class="text-danger"></span>
            </div>
            


            <div class="text-center mt-3">
                <input class="btn btn-sm btn-success w-25" type="submit" value="Xuất kho" />
            </div>
        </div>





    </form>
</div>
<div id="tab-3" class="tab-content ">
    <div class="row">

        <div class="col-md-4 mb-3 col-sm-12">
            <label>Số phiếu</label>
            <div>@phieubanhang.Sophieu</div>
        </div>
        <div class="col-md-4 mb-3  col-sm-12">
            <label>Nhân viên lập phiếu</label>
            <div>@phieubanhang.Idnv</div>
        </div>
        <div class="col-md-4 mb-3  col-sm-12">
            <label>Ngày lập</label>
            <div>@phieubanhang.Ngaylap</div>
        </div>
        <div class="col-md-4 col-sm-12">
            <label>Số hóa đơn</label>
            <div>@phieubanhang.Sohd</div>
        </div>
        <div class="col-md-4 col-sm-12">
            <label>Ngày hóa đơn</label>
            <div>@phieubanhang.Ngayhd</div>
        </div>
        <div class="col-md-4 col-sm-12">
            <label>Ghi chú</label>
            <div>@phieubanhang.Ghichu</div>
        </div>
        <div class="mt-3 text-center">
            <a asp-action="Edit" asp-controller="Phieunhapkho" class="btn  btn-sm btn-warning " asp-route-id="@phieubanhang.Idpbh">Cập nhật</a>
        </div>
    </div>
</div>






<div class="modal" tabindex="-1" role="dialog" id="form-modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
