<div class="x_content">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Số phiếu</th>
                            <th>Nhân viên lập</th>
                            <th>Ngày lập phiếu</th>
                            <th>Nhà cung cấp</th>
                            @*<th>Số hóa đơn</th>
                                <th>Ngày hóa đơn</th>
                                <th>Ghi chú</th>*@

                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            @*<td>.</td>
                                <td>.</td>
                                <td>.</td>*@
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Sophieu</td>
                                <td>@item.IdnvNavigation.Tennv</td>
                                @{
                                    DateTime dt = item.Ngaylap;
                                }
                                <td>@dt.ToString("dd/MM/yyyy hh:mm:ss tt", System.Globalization.CultureInfo.InvariantCulture)</td>
                                <td>@item.IdnccNavigation.Tenncc</td>
                                @*<td>@item.Sohd</td>
                                    <td>@item.Ngayhd</td>
                                    <td>@item.Ghichu</td>*@

                                <td class="table-td-center">
                                    @*<a asp-action="EditPN" class="btn  btn-sm btn-warning " asp-route-id="@item.Idpnk">Nhập</a>*@
                                    <a asp-action="Details" class="btn  btn-sm btn-info" asp-route-id="@item.Idpnk"><i class="fas fa-info text-white"></i></a>
                                    <a asp-action="Edit" class="btn  btn-sm btn-warning " asp-route-id="@item.Idpnk"><i class="fas fa-edit text-white"></i></a>
                                    <a asp-action="Delete" class="btn btn-sm  btn-danger " asp-route-id="@item.Idpnk"><i class="fas fa-trash-alt text-white"></i></a>

                                </td>
                            </tr>
                        }



                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>


