

@model QuanLySanXuat.Entities.Vatlieu

@{
    Layout = null;


}

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Idvl" />
<div class="row mb-3">
    <div class="form-group col-md-3 col-sm-12">

        <label class="control-label">Hãng sản xuất</label>
        <div>
            @Model.IdhsxNavigation.Mahsx - @Model.IdhsxNavigation.Tenhsx
        </div>
    </div>


    <div class="form-group col-md-3 col-sm-12">

        <label for="exampleSelect1" class="control-label">Nhóm vật liệu</label>
        <div>
            @Model.IdnvlNavigation.Manvl - @Model.IdnvlNavigation.Tennvl
        </div>


    </div>
    <div class="form-group col-md-3 col-sm-12">

        <label for="exampleSelect1" class="control-label">Nước sản xuất</label>
        <div>
            @Model.IdnsxNavigation.Mansx - @Model.IdnsxNavigation.Tennsx
        </div>


    </div>
    <div class="form-group col-md-3 col-sm-12">

        <label asp-for="Mavl" class="control-label"></label>
        <div>
            @Model.Mavl - @Model.Tenvl
        </div>
    </div>



    <div class="form-group col-md-3 col-sm-12">

        <label asp-for="Quycach" class="control-label"></label>
        <div>
            @Model.Quycach
        </div>
    </div>



    <div class="form-group col-md-3 col-sm-12">

        <label asp-for="Giaban" class="control-label">Giá bán</label>
        <div>
            @Model.Giaban
        </div>
    </div>

</div>


<form asp-action="Delete">
    <input type="hidden" asp-for="Idvl" />

    <input type="submit" value="Xác nhận" class="btn btn-danger w-100" />
</form>

