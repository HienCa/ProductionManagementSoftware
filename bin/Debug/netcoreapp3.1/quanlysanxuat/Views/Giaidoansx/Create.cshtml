@using QuanLySanXuat.Entities;
@model QuanLySanXuat.Entities.Giaidoansx


@{
    Layout = "_Layout";

}




<form asp-action="Create" method="post">
    <div class="row ">


        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Mã giai đoạn sản xuất </label>
            <input asp-for="Magdsx" class="form-control" type="text" placeholder="">
            <span asp-validation-for="Magdsx" class="text-danger"></span>

        </div>
        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Tên giai đoạn sản xuất</label>
            <input asp-for="Tengdsx" class="form-control" type="text">
            <span asp-validation-for="Tengdsx" class="text-danger"></span>

        </div>


        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Ghi chú</label>
            <textarea asp-for="Ghichu" class="form-control" type="text"></textarea>
            <span asp-validation-for="Ghichu" class="text-danger"></span>

        </div>




    </div>
    <div class="text-center mt-3 align-items-md-center">
        @Html.ActionLink("Quay lại", "Index", "Giaidoansx", null, new { @class = "btn btn-cancel mt-3 w-25" })
        <button class="btn btn-success w-25" type="submit">Thêm</button>
    </div>

</form>

