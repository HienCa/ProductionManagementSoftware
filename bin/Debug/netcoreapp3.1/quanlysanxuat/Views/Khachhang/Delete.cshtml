@model QuanLySanXuat.Entities.Khachhang

<!DOCTYPE html>
<html lang="en">

<head>
    <title>Xóa thông tin khách hàng | Quản trị Admin</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="~/CSS/main.css">
    <link rel="stylesheet" type="text/css" href="~/CSS/mainsub.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <!-- or -->
    <link rel="stylesheet" href="https://unpkg.com/boxicons@latest/css/boxicons.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <link rel="stylesheet" type="text/css"
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script type="text/javascript" src="/ckeditor/ckeditor.js"></script>
    <script src="http://code.jquery.com/jquery.min.js" type="text/javascript"></script>

</head>

<body>

    <!-- Navbar-->
    <header class="app-header">
        <!-- Navbar Right Menu-->
        <ul class="app-nav">


            <!-- User Menu-->
            <li>
                @Html.ActionLink("Quay Lại", "Index", "Khachhang", null, new { @class = "app-nav__item " })


            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->


    <main class="mt-5">

        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">Danh sách khách hàng</li>
                <li class="breadcrumb-item"><a style="font-weight:bolder" href="#">Xóa thông tin chi tiết</a></li>
            </ul>

            <div id="clock"></div>

        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <h3 class="tile-title">Nhân viên #@Model.Makh</h3>
                    <div class="tile-body">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Idkh" />
                        <div class="row">
                            <div class="form-group col-md-3 col-sm-12">

                                <label class="control-label">Nhân viên</label>
                                <div>
                                    @Model.Makh - @Model.Tenkh
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label for="exampleSelect1" class="control-label">Địa chỉ</label>

                                <div>
                                    @Model.Cccd
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label for="exampleSelect1" class="control-label">Địa chỉ</label>

                                <div>
                                    @Model.Diachi
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label for="exampleSelect1" class="control-label">Email</label>

                                <div>
                                    @Model.Email
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label for="exampleSelect1" class="control-label">Số điện thoại</label>
                                <div>
                                    @Model.Sdt
                                </div>


                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label asp-for="Ngaysinh" class="control-label">Ngày sinh</label>
                                <div>
                                    @Model.Ngaysinh
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label asp-for="Masothue" class="control-label">Mã số thuế</label>
                                <div>
                                    @Model.Masothue
                                </div>
                            </div>


                            <div class="form-group col-md-3 col-sm-12">

                                <label asp-for="Gioitinh" class="control-label">Giới tính</label>
                                <div>
                                    @Model.Gioitinh
                                </div>
                            </div>
                            <div class="form-group col-md-3 col-sm-12">

                                <label asp-for="Ghichu" class="control-label">Ghi chú</label>
                                <div>
                                    @Model.Ghichu
                                </div>
                            </div>

                            <div class="form-group col-md-4 col-sm-4">
                                <label asp-for="Hinhanh" class="control-label">Hình ảnh</label>

                                <img src="~/Images/@Model.Hinhanh"
                                     class=" "
                                     height="200" width="200"
                                     style="border-radius:10px"
                                     asp-append-version="true" />

                                @*<img src="@FileLocation.RetriveFileFromFolder@Model.Hinhanh" class="img-thumbnail" height="100" width="100" asp-append-version="true" />*@
                            </div>


                        </div>


                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Idkh" />

                            @Html.ActionLink("Hủy bỏ", "Index", "Khachhang", null, new { @class = "btn btn-cancel mt-3 w-25" })

                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </form>
                    </div>

                </div>
            </div>
        </div>

    </main>



    <script src="~/Javascript/plugins/pace.min.js"></script>
    <script src="~/Javascript/jquery-3.2.1.min.js"></script>
    <script src="~/Javascript/popper.min.js"></script>
    <script src="~/Javascript/bootstrap.min.js"></script>
    <script src="~/Javascript/main.js"></script>

    <script>
        const inpFile = document.getElementById("inpFile");
        const loadFile = document.getElementById("loadFile");
        const previewContainer = document.getElementById("imagePreview");
        const previewContainer = document.getElementById("imagePreview");
        const previewImage = previewContainer.querySelector(".image-preview__image");
        const previewDefaultText = previewContainer.querySelector(".image-preview__default-text");
        inpFile.addEventListener("change", function () {
            const file = this.files[0];
            if (file) {
                const reader = new FileReader();
                previewDefaultText.style.display = "none";
                previewImage.style.display = "block";
                reader.addEventListener("load", function () {
                    previewImage.setAttribute("src", this.result);
                });
                reader.readAsDataURL(file);
            }
        });

    </script>
</body>

</html>