<div class="d-flex">
    <h2>Quản Lý Khách Hàng</h2>
    <div class="col-md-3 col-sm-12">
        <a href="/Khachhang/Create" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size:17px">
            <i class="fas fa-plus"></i>Thêm mới
        </a>
        <a href="/Khachhang/ExportToExcel" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-excel"></i>
        </a>
        <a href="/Khachhang/ExportToPDF" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-pdf"></i>
        </a>
        <a href="/Khachhang/ExportToCSV" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-csv"></i>
        </a>
    </div>


    <div class="col-md-3 col-sm-12">
        <form asp-action="Import" asp-controller="Khachhang" method="post" enctype="multipart/form-data">
            <div class=" d-flex">
                <input id="fileExcel" class="" required type="file" name="file" />
                <button class="btn" style="background-color: #EDEDED; color: #73879C; font-size: 17px " type="submit"><i class="fas fa-upload"></i></button>
                @if (ViewData["errorMessage"] != null)
                {
                    <label class="text-danger">@ViewData["errorMessage"]</label>
                }
            </div>

        </form>

    </div>



</div>
