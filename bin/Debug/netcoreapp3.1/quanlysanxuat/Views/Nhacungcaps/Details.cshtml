

@model QuanLySanXuat.Entities.Nhacungcapvl
@{
    Layout = null;

}




<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input type="hidden" asp-for="Idncc" />
<div class="row">
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Nhà cung cấp</label>
        <div>
            @Model.Mancc - @Model.Tenncc
        </div>
    </div>

    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Địa chỉ</label>
        <div>
            @Model.Diachi
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Email</label>
        <div>
            @Model.Email
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Số điện thoại</label>
        <div>
            @Model.Sdt
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Mã số thuế</label>
        <div>
            @Model.Masothue
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Facebook</label>
        <div>
            @Model.Facebook
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label class="control-label">Zalo</label>
        <div>
            @Model.Zalo
        </div>
    </div>
    <div class="form-group col-md-6 col-sm-12">

        <label for="exampleSelect1" class="control-label">Ghi chú</label>

        <div>
            @Model.Ghichu
        </div>
    </div>
    <div class="mt-3 text-center">
        <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.Idncc"><i class="fas fa-edit text-white"></i></a>
    </div>
</div>



