@model IEnumerable<QuanLySanXuat.Entities.Nhacungcapvl>
@using QuanLySanXuat.Entities;
@{
    Layout = "_Layout";


}
<form asp-action="CreateOrEdit" asp-controller="Nhacungcaps" method="post" onsubmit="return onSubmitFormNCC()">
    <input id="action" type="hidden" name="action" />
    <input id="Idncc" type="hidden" name="Idncc" />
    <div class="bg-light p-1 border border-secondary rounded">
        <h2>Quản Lý Nhà Cung Cấp</h2>

        <div class="row">
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Mã NCC
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input name="Mancc" id="Mancc" maxlength="255" onfocus="this.value=''" type="text" class="form-control">

                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Tên NCC
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input name="Tenncc" id="Tenncc" onfocus="this.value=''" maxlength="255" type="text" class="form-control">
                        <span id="checkTenncc" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Email
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input id="Email" name="Email" onfocus="this.value=''" maxlength="255" type="text" class="form-control">
                        <span id="checkEmail" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        SĐT
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input type="text" name="Sdt" maxlength="255" onfocus="this.value=''" id="Sdt" class="form-control">
                        <span id="checkSdt" class="text-danger"></span>

                    </div>
                </div>
            </div>

        </div>
        <div class="row mt-2">
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Địa Chỉ
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input type="text" name="Diachi"onfocus="this.value=''" maxlength="255" id="Diachi" class="form-control">
                        <span id="checkDiachi" class="text-danger"></span>

                    </div>
                </div>
            </div>

            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Số Thuế
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input type="text" name="Masothue"onfocus="this.value=''" maxlength="255" id="Masothue" class="form-control">
                        <span id="checkMasothue" class="text-danger"></span>

                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Facebook
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input type="text" name="Facebook"onfocus="this.value=''" id="Facebook" maxlength="255" class="form-control">
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-3 col-sm-12">
                        Zalo
                    </div>
                    <div class="col-md-9 col-sm-12">
                        <input type="text" id="Zalo"onfocus="this.value=''" name="Zalo" maxlength="255" class="form-control">
                    </div>
                </div>
            </div>

        </div>
        <div class="row mt-2">
            <div class="col-md-9 col-sm-12">
                <div class="row d-flex align-items-center">
                    <div class="col-md-1 col-sm-12">
                        Ghi chú
                    </div>
                    <div class="col-md-11 col-sm-12">
                        <textarea name="Ghichu" id="Ghichu"onfocus="this.value=''" row="" maxlength="4000" style="height:10px;" class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-12 ">
                <button type="submit" style="float: right;" class="btn btn-primary w-100" id="btnAddNcc">Thêm</button>
                <div class="d-flex">
                    <button type="button" style="display:none;" class="btn btn-light w-50" id="btnCancelNcc">Hủy</button>
                    <button type="submit" class="btn btn-primary w-50" onclick="onEditNCC()" id="btnUpdateNcc" style="display:none; float: right;">
                        Cập
                        nhật
                    </button>
                </div>
            </div>
        </div>
    </div>

</form>

<div class="x_content">
    <div class="row">
        <div class="col-sm-12" style="height:60vh;overflow-y:scroll">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr  class="text-center">
                            <th>Mã NCC</th>
                            <th>Tên NCC</th>
                            <th>Dịa Chỉ</th>
                            <th>SĐT</th>
                            <th>Email</th>
                            <th>Mã Số Thuế</th>
                            <th>FACEBOOK</th>
                            <th>ZALO</th>
                            <th>Ghi Chú</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                           

                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Mancc</td>
                                <td>@item.Tenncc</td>
                                <td>@item.Diachi</td>
                                <td>@item.Sdt</td>
                                <td>@item.Email</td>
                                <td>@item.Masothue</td>
                                <td>@item.Facebook</td>
                                <td>@item.Zalo</td>
                                <td>@item.Ghichu</td>
                                <td style="display:none">@item.Idncc</td>


                                <td class="table-td-center d-flex">
                                    <a class="btn  btn-sm btn-warning " onclick="onEditNCC(this)"><i class="fas fa-edit text-white"></i></a>
                                    <form class="formDelete" asp-action="Delete" asp-route-id="@item.Idncc" asp-controller="Nhacungcaps">
                                        <button type="submit" class="btn  btn-sm btn-danger "><i class="fas fa-trash text-white"></i></button>
                                    </form>

                                </td>
                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>
<script>
    let deleteBtns = document.querySelectorAll('.formDelete');
    deleteBtns.forEach(function (deleteBtn) {
        deleteBtn.addEventListener('submit', function (e) {

            var form = this;

            e.preventDefault();

            swal({
                title: 'Bạn có chắc chắn muốn xóa?',

                icon: 'warning',
                buttons: ['Hủy bỏ!', 'Xác nhận'],
                dangerMode: true,
            }).then(function (isConfirm) {
                if (isConfirm) {

                    form.submit();
                    swal({
                        title: 'Đã xóa!',
                        icon: 'success',
                        timer: 1500,
                        button: false,
                    });

                } else {
                    swal({
                        title: 'Đã hủy!',
                        button: false,
                        icon: 'error',
                        timer: 500,
                    });
                }
            });
        });
    })



    function onSubmitFormNCC() {
        let isSubmit = false;
        let Mancc = document.getElementById("Mancc").value;
        let Tenncc = document.getElementById("Tenncc").value;
        let Diachi = document.getElementById("Diachi").value;
        let Sdt = document.getElementById("Sdt").value;
        let Email = document.getElementById("Email").value;
        let Masothue = document.getElementById("Email").value;
        let Fb = document.getElementById("Email").value;
        let Zl = document.getElementById("Email").value;
        let checkMancc = document.getElementById("checkMancc");
        let checkTenncc = document.getElementById("checkTenncc");
        let errorMessage = "Vui lòng cung cấp thông tin!";

        if (Tenncc.length == 0 && Diachi.length == 0 && Sdt.length == 0 && Email.length == 0 && Masothue.length == 0) {
            checkTenncc.innerText = errorMessage;
            checkDiachi.innerText = errorMessage;
            checkSdt.innerText = errorMessage;
            checkEmail.innerText = errorMessage;
            checkMasothue.innerText = errorMessage;
            
          
        }
        if (Tenncc.length == 0) {
            checkTenncc.innerText = errorMessage;

         
        }
        if ( Diachi.length == 0 ) {
            checkDiachi.innerText = errorMessage;
           
            
        }
        if ( Sdt.length == 0 ) {
            checkSdt.innerText = errorMessage;
          
          
        }
        if (Masothue.length == 0) {
            checkMasothue.innerText = errorMessage;

           
        }
        if (!validateEmail(Email)) {
            checkEmail.innerText = "Email không hợp lệ!";
            

        }
        else {
            isSubmit = true;
        }
        return isSubmit;
    }


    let btnAddNcc = document.getElementById("btnAddNcc");
    let btnUpdateNcc = document.getElementById("btnUpdateNcc");
    let btnCancelNcc = document.getElementById("btnCancelNcc");
    let action = document.getElementById("action");

    btnCancelNcc.addEventListener("click", function () {
        btnUpdateNcc.style.display = "none";
        btnCancelNcc.style.display = "none";
        btnAddNcc.style.display = "block";
    })


    btnAddNcc.addEventListener("click", function () {
        action.value = "addItem";
    })
    btnUpdateNcc.addEventListener("click", function () {
        action.value = "editItem";
    })


    function onEditNCC(td) {

        selectedRow = td.parentElement.parentElement;
        document.getElementById("Mancc").value = selectedRow.cells[0].innerHTML;
        document.getElementById("Tenncc").value = selectedRow.cells[1].innerHTML;
        document.getElementById("Diachi").value = selectedRow.cells[2].innerHTML;
        document.getElementById("Sdt").value = selectedRow.cells[3].innerHTML;
        document.getElementById("Email").value = selectedRow.cells[4].innerHTML;
        document.getElementById("Masothue").value = selectedRow.cells[5].innerHTML;
        //document.getElementById("Facebook").value = selectedRow.cells[6].innerHTML;
        //document.getElementById("Zalo").value = selectedRow.cells[7].innerHTML;
        document.getElementById("Ghichu").value = selectedRow.cells[8].innerHTML;
        document.getElementById("Idncc").value = selectedRow.cells[9].innerHTML;


        btnAddNcc.style.display = "none";
        btnUpdateNcc.style.display = "block";
        btnCancelNcc.style.display = "block";

    }
    btnUpdateNcc.addEventListener("click", function () {
        btnAddNcc.style.display = "block";
        btnUpdateNcc.style.display = "none";
        btnCancelNcc.style.display = "none";

    })
</script>