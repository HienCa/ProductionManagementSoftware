@model QuanLySanXuat.Entities.Noidungpnk

@{
    Layout = "_Layout";
}


<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Soluong" class="control-label"></label>
        <input asp-for="Soluong" class="form-control" />
        <span asp-validation-for="Soluong" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="control-label">Đơn giá nhập</label><span id="demo" style="font-size: 20px; color: #0788d7;"></span>
        <input type="number" step="any" oninput="myFunction(this.value)" class="form-control">
        <input asp-for="Dongia" id="price" type="hidden" class="form-control">
        <span asp-validation-for="Dongia" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Idvl" class="control-label"></label>
        <select asp-for="Idvl" class="form-control" asp-items="ViewBag.Idvl"></select>
    </div>
    <div class="form-group">
        <label asp-for="Idpnk" class="control-label"></label>
        <select asp-for="Idpnk" class="form-control" asp-items="ViewBag.Idpnk"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

