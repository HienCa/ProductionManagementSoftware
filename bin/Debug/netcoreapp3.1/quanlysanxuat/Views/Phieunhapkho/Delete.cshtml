                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhieunhapkhoidpnkNavigation.Ngaynhap)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.VatlieuidvlNavigation.Tenvl)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhieunhapkhoidpnkNavigation.Sohd)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PhieunhapkhoidpnkNavigation.Ngayhd)
                                    </th>
                                    @*<th></th>*@
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieunhapkhoidpnkNavigation.NhanvienidnvNavigation.Manv) - @Html.DisplayFor(modelItem => item.PhieunhapkhoidpnkNavigation.NhanvienidnvNavigation.Tennv)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Soluong)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Dongia)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieunhapkhoidpnkNavigation.Ngaynhap)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.VatlieuidvlNavigation.Tenvl)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieunhapkhoidpnkNavigation.Sohd)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PhieunhapkhoidpnkNavigation.Ngayhd)
                                        </td>
