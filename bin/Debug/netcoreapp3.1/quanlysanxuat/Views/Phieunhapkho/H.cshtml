                        <div class="col-md-4 col-sm-12">
                            Đơn giá
                        </div>
                        <div class="col-md-8 col-sm-12">
                            <input asp-for="Dongia" class="form-control" placeholder="0.0" inputmode="numeric" type="text" id="Dongia" oninput="ValidateIsNaN()"
