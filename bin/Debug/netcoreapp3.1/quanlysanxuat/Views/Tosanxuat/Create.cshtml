@using QuanLySanXuat.Entities;
@model QuanLySanXuat.Entities.Tosanxuat


@{
    ProductionManagementSoftwareContext _context = new ProductionManagementSoftwareContext();
    List<Giaidoansx> giaidoansx = _context.Giaidoansx.Where(n => n.Active == 1).ToList();

    Layout = "_Layout";
}


<form asp-action="Create" method="post">
    <div class="row ">
        <div class="form-group mb-3  col-md-12 col-sm-12">
            <label class="control-label">Giai đoạn sản xuất</label>
            <select asp-for="Idgdsx" id="multipleSelect" placeholder="Chọn giai đoạn sản xuất " data-search="true"
                    data-silent-initial-value-set="true">
                @foreach (var item in giaidoansx)
                {
                    <option value="@item.Idgdsx">@item.Tengdsx</option>
                }

            </select>
        </div>

        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Mã tổ sản xuất </label>
            <input asp-for="Matsx" class="form-control" type="text" placeholder="">
            <span asp-validation-for="Matsx" class="text-danger"></span>

        </div>
        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Tên tổ sản xuất</label>
            <input asp-for="Tentsx" class="form-control" type="text">
            <span asp-validation-for="Tentsx" class="text-danger"></span>

        </div>


        <div class="form-group mb-3  form-group-lg col-md-12 col-sm-12">

            <label class="control-label">Ghi chú</label>
            <textarea asp-for="Ghichu" class="form-control" type="text"></textarea>
            <span asp-validation-for="Ghichu" class="text-danger"></span>

        </div>




    </div>
    <div class="text-center mt-3 align-items-md-center">

        <button class="btn btn-success w-100" type="submit">Thêm</button>
    </div>

</form>

