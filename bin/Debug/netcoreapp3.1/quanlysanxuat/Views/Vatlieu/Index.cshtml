@model IEnumerable<QuanLySanXuat.Entities.Vatlieu>
@using QuanLySanXuat.Entities;
@{
    Layout = "_Layout";
    ProductionManagementSoftwareContext _context = new ProductionManagementSoftwareContext();
    Nhanvien nv = _context.Nhanvien.Where(n => n.Email.Equals(TempData["OWN"])).FirstOrDefault();

}
<div class="d-flex">
    <h2>Quản Lý Vật Liệu </h2>
    <div class="col-md-3 col-sm-12">
        @*<a href="/Vatlieu/AddInterface" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size:17px">
                <i class="fas fa-plus"></i>Thêm mới
            </a>*@
        <a href="/Vatlieu/Create" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size:17px">
            <i class="fas fa-plus"></i>Thêm mới
        </a>
        @*<a onclick="showInPopup('@Url.Action("Create", "Vatlieu", null, Context.Request.Scheme)', 'Thêm Vật Liệu')" class="btn p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px "><i class="fas fa-plus"></i>Thêm mới</a>*@

        <a href="/Vatlieu/ExportToExcel" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-excel"></i>
        </a>
        <a href="/Vatlieu/ExportToPDF" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-pdf"></i>
        </a>
        <a href="/Vatlieu/ExportToCSV" class="btn ml-2 p-2" style="background-color: #EDEDED; color: #73879C; font-size: 17px ">
            <i class="fas fa-file-csv"></i>
        </a>
    </div>


    <div class="col-md-3 col-sm-12">
        <form asp-action="Import" asp-controller="Vatlieu" method="post" enctype="multipart/form-data">
            <div class=" d-flex">
                @*<label for="fileExcel"  class="btn  ">Chọn file Excel</label>*@
                <input id="fileExcel" class="" required type="file" name="file" />
                <button class="btn" style="background-color: #EDEDED; color: #73879C; font-size: 17px " type="submit"><i class="fas fa-upload"></i></button>
            </div>

        </form>

    </div>
</div>

<div class="x_content">
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">


                <table id="datatable-responsive" class="table table-striped table-bordered dt-responsive nowrap"
                       cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>Mã vl</th>
                            <th>Tên vl</th>
                            <th>Quy cách</th>
                            <th>Giá bán(đ)</th>
                            <th>Nhóm</th>
                            <th>Hãng</th>
                            <th>Nước</th>

                        </tr>
                    </thead>
                    <tbody>
                        <tr class="d-none">
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>
                            <td>.</td>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Mavl</td>
                                <td>@item.Tenvl</td>
                                <td>@item.Quycach</td>
                                @{
                                    var Giaban = String.Format("{0:0,0}", @item.Giaban);
                                }
                                <td>@Giaban</td>
                                <td>@item.IdnvlNavigation.Tennvl</td>
                                <td>@item.IdhsxNavigation.Tenhsx</td>
                                <td>@item.IdnsxNavigation.Tennsx</td>

                                <td>
                                    @*<button type="button" data-toggle="ajax-modal" data-target="#CTVatlieu"
                                                data-url="@Url.Action($"Details/{item.Idvl}")" class="btn btn-sm btn-info">
                                            <i class="fas fa-info text-white"></i>
                                        </button>*@
                                    @*<a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@item.Idvl"><i class="fas fa-info text-white"></i></a>*@
                                    @*<a asp-action="Edit" class="btn  btn-sm  btn-warning " asp-route-id="@item.Idvl"><i class="fas fa-edit text-white"></i></a>
                                        <a asp-action="Delete" class="btn  btn-sm  btn-danger " asp-route-id="@item.Idvl"><i class="fas fa-trash-alt text-white"></i></a>*@
                                    <a onclick="showInPopup('@Url.Action("Details", "Vatlieu" , new { id = item.Idvl }, Context.Request.Scheme)','Thông Tin Chi Tiết')" class="btn btn-sm  btn-info ">
                                        <i class="fas fa-info text-white"></i>
                                    </a>
                                    <a onclick="showInPopup('@Url.Action("Edit", "Vatlieu" , new { id = item.Idvl }, Context.Request.Scheme)','Cập Nhật Thông Tin')" class="btn btn-sm  btn-warning ">
                                        <i class="fas fa-edit text-white"></i>
                                    </a>
                                    <a onclick="showInPopup('@Url.Action("Delete", "Vatlieu" , new { id = item.Idvl }, Context.Request.Scheme)','Bạn Chắc Chắn Muốn Xóa?')" class="btn btn-sm  btn-danger ">
                                        <i class="fas fa-trash-alt text-white"></i>
                                    </a>


                                </td>
                            </tr>
                        }

                    </tbody>
                </table>


            </div>
        </div>
    </div>
</div>
